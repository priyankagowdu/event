<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DFD2D2"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="EVENT MANAGEMENT"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:textAlignment="center"
                android:background="#5C5858"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F3EFEF"
            android:padding="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:padding="4dp"
                android:textColor="@color/black"
                android:text="Frist Name:-"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fristname"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape"
                android:hint="Enter the Frist Name"
                android:textColor="@color/black"
                android:textColorHint="#938D8D"

                android:padding="8dp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:padding="4dp"
                android:textColor="@color/black"

                android:text="Last Name:-"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:textColorHint="#938D8D"
android:id="@+id/lastname"
                android:textColor="@color/black"

                android:background="@drawable/shape"
                android:hint="Enter the Last Name"
                android:padding="8dp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:padding="4dp"
                android:textColor="@color/black"

                android:text="Email Address:-"
                android:textSize="20dp"
                android:textStyle="bold" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape"
                android:hint="Enter the Email Address"
                android:padding="8dp"
                android:textColorHint="#938D8D"
                android:id="@+id/email"
                android:textColor="@color/black"

                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:padding="4dp"
                android:textColor="@color/black"

                android:text="Phone Number:-"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/shape"
                android:hint="+916380291564"
                android:padding="8dp"
                android:textColorHint="#938D8D"
                android:id="@+id/phone"
                android:textColor="@color/black"

                android:textSize="20dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="177dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:padding="4dp"
                    android:text="Gender:"

                    android:textAlignment="textStart"
                    android:textColor="#0D0D0D"
                    android:textStyle="bold"
                    android:textSize="16sp" />


                <RadioGroup
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:id="@+id/radiogroup"
                    android:orientation="vertical">


                    <RadioButton
                        android:layout_width="135dp"
                        android:layout_height="33dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/shape1"
                        android:padding="4dp"
                        android:textSize="20dp"
                        android:text="Female"
                        android:textColor="#0E162A" />


                    <RadioButton
                        android:layout_width="135dp"
                        android:layout_height="33dp"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"

                        android:layout_marginTop="4dp"
                        android:background="@drawable/shape1"
                        android:padding="4dp"
                        android:text="Male"
                        android:textColor="#0E162A" />


                </RadioGroup>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="4dp"
                    android:textColor="@color/black"

                    android:text="Interests:-"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/promospinner"
                    android:layout_width="250dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_spinner"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="50dp"
                    android:paddingBottom="10dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="4dp"
                    android:textColor="@color/black"

                    android:text="Website:-"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/shape"
                    android:hint="Enter the website"
                    android:textColorHint="#938D8D"
                    android:id="@+id/website"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="4dp"
                    android:text="Bio:-"
                    android:textColor="@color/black"

                    android:textSize="20dp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/bio"
                    android:textColor="@color/black"
                    android:background="@drawable/shape1"
                    android:padding="8dp"
                    android:textSize="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="4dp"
                    android:textColor="@color/black"
                    android:text="Social media:-"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/shape1"

                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Github"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:background="@drawable/shape2"
                        android:textStyle="bold"
                        android:textSize="20dp" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:id="@+id/username"
                        android:textColor="@color/black"
                        android:hint="username"
                        android:textAlignment="center"
                        android:textColorHint="#938D8D"
                        android:textSize="20dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape1"

                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:text="Twitter"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:background="@drawable/shape2"
                        android:textStyle="bold"
                        android:textSize="20dp" />

                    <EditText
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:id="@+id/username1"
                        android:textColor="@color/black"
                        android:hint="username"
                        android:textAlignment="center"
                        android:textColorHint="#938D8D"
                        android:textSize="20dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:padding="4dp"
                        android:textColor="@color/black"

                        android:text="Event Passes:-"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/promospinner1"
                        android:layout_width="250dp"
                        android:layout_height="43dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_spinner"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="50dp"
                        android:paddingBottom="10dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/black"

                        android:padding="4dp"
                        android:text="How Did you Know About the Event?:-"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/promospinner2"
                        android:layout_width="250dp"
                        android:layout_height="43dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_spinner"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="50dp"
                        android:paddingBottom="10dp" />
                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="Register"
                    android:id="@+id/Register"
                    android:layout_marginBottom="10dp"
                    android:textSize="24dp"
                    android:background="@drawable/button"
                    android:textColor="@color/white"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="120dp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>